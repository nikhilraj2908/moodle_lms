{{!
    @template tool_courserating/course_ratings_popup

    Example context (json):
    {
        "courseid": 12
    }

}}
<div class="tool_courserating-reviews-popup">
    {{#canrate}}
        <p class="mdl-align">
            <a href="#" data-action="tool_courserating-addrating" data-courseid="{{courseid}}">
                {{#hasrating}}
                    {{#str}}editrating, tool_courserating{{/str}}
                {{/hasrating}}
                {{^hasrating}}
                    {{#str}}addrating, tool_courserating{{/str}}
                {{/hasrating}}
            </a>
        </p>
    {{/canrate}}

    <div class="container course-rating-summary" data-courseid="{{courseid}}" data-for="tool_courserating-summary">
        {{>tool_courserating/course_ratings_summary}}
    </div>

    <div class="course-reviews" data-for="tool_courserating-reviews"
         data-systemcontextid="{{systemcontextid}}" data-courseid="{{courseid}}"
         data-withrating="0">
        {{>tool_courserating/course_ratings_popup_reviews}}
    </div>
</div>
