{{!
    @template tool_courserating/course_ratings_popup_reviews

    Example context (json):
    {
        "courseid": 12
    }

}}
{{^offset}}
    {{#withrating}}
        <p class="mdl-align">Showing reviews with rating {{withrating}}.
            <a href="#" data-for="tool_courserating-resetwithrating">{{#str}}showallratings, tool_courserating{{/str}}</a></p>
    {{/withrating}}
{{/offset}}
{{#ratings}}
    {{> tool_courserating/rating}}
{{/ratings}}
{{#hasmore}}
    <div class="mdl-align reviews-showmore-wrapper" data-for="tool_courserating-showmore">
        <button type="button" class="btn btn-secondary" data-action="showmore"
                data-nextoffset="{{nextoffset}}">{{#str}}showmorereviews, tool_courserating{{/str}}</button>
    </div>
{{/hasmore}}
